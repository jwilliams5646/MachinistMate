<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="125dp"
            android:id="@+id/oblique_image"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/oblique_triangle" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oblique_image"
            android:layout_centerHorizontal="true"
            android:id="@+id/oblique_input_style_layout">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/oblique_input_style_spinner"
                android:layout_margin="4dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/oblique_question_button"
                android:text="\?"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/buttons"
                android:layout_margin="4dp"/>
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oblique_input_style_layout"
        android:layout_alignLeft="@+id/oblique_image"
        android:id="@+id/oblique_answer_layout"
        android:layout_marginRight="4dp">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/oblique_choice_spinner"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"/>

        <com.jwilliams.machinistmate.app.AppContent.RobotoTextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="New Text"
            android:id="@+id/oblique_answer"
            android:layout_weight="1"
            android:layout_margin="4dp"
            style="@style/TextViewStyle"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/oblique_answer_degrad_spinner"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oblique_answer_layout"
        android:layout_alignLeft="@+id/oblique_image"
        android:layout_marginRight="4dp"
        android:id="@+id/oblique_input1_layout"
        android:visibility="invisible">

        <com.jwilliams.machinistmate.app.AppContent.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="New Text"
            android:id="@+id/oblique_view1"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            style="@style/TextViewStyle"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:id="@+id/oblique_input1"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            style="@style/EditTextStyle"/>
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oblique_answer_layout"
        android:layout_alignLeft="@+id/oblique_image"
        android:layout_marginRight="4dp"
        android:id="@+id/oblique_deg_rad_layout1">


        <com.jwilliams.machinistmate.app.AppContent.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="New Text"
            android:id="@+id/oblique_degree_rad_view1"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            style="@style/TextViewStyle"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:id="@+id/oblique_deg_rad_input1"
            android:layout_margin="4dp"
            style="@style/EditTextStyle"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/oblique_deg_rad_choice_spinner1"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/oblique_deg_rad_layout1"
        android:layout_alignLeft="@+id/oblique_image"
        android:layout_marginRight="4dp"
        android:id="@+id/oblique_deg_rad_layout2">


        <com.jwilliams.machinistmate.app.AppContent.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="New Text"
            android:id="@+id/oblique_degree_rad_view2"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            style="@style/TextViewStyle"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:id="@+id/oblique_deg_rad_input2"
            android:layout_margin="4dp"
            style="@style/EditTextStyle"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/oblique_deg_rad_choice_spinner2"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/oblique_input1_layout"
        android:layout_alignLeft="@+id/oblique_image"
        android:layout_marginRight="4dp"
        android:id="@+id/oblique_input2_layout"
        android:visibility="invisible">

        <com.jwilliams.machinistmate.app.AppContent.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="New Text"
            android:id="@+id/oblique_view2"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            style="@style/TextViewStyle"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:id="@+id/oblique_input2"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            style="@style/EditTextStyle"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/oblique_input2_layout"
        android:layout_alignLeft="@+id/oblique_image"
        android:layout_marginRight="4dp"
        android:id="@+id/oblique_input3_layout">

        <com.jwilliams.machinistmate.app.AppContent.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="New Text"
            android:id="@+id/oblique_view3"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            style="@style/TextViewStyle"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:id="@+id/oblique_input3"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            style="@style/EditTextStyle"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/calculate"
        android:id="@+id/oblique_calc_button"
        android:layout_below="@+id/oblique_input3_layout"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        style="@style/buttons"/>

</RelativeLayout>